{
  "name": "echo",
  "version": "1.0.0",
  "description": "Echo voice assistant",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:renderer\" \"wait-on http://localhost:5174 && electron . --dev\"",
    "dev:renderer": "vite",
    "build": "npm run build:renderer && electron-builder",
    "build:renderer": "vite build",
    "build-python": "cd ../agent && uv run python build-python.py",
    "package": "npm run build-python && npm run build:renderer && electron-builder",
    "dist": "npm run build-python && npm run build:renderer && electron-builder --publish=never",
    "dist:mac-arm64": "npm run build-python && npm run build:renderer && electron-builder --mac --arm64 --publish=never"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "lucide-react": "^0.294.0",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.0",
    "tailwindcss": "^3.3.6",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.echo.desktop",
    "productName": "echo",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!src/**/*",
      "!*.config.*",
      "!tsconfig.json"
    ],
    "extraResources": [
      {
        "from": "../agent/python-dist/",
        "to": "python/"
      }
    ],
    "icon": "assets/icons/image.png",
    "mac": {
      "icon": "assets/icons/image.icns",
      "category": "public.app-category.productivity"
    },
    "win": {
      "icon": "assets/icons/image.ico",
      "target": "nsis"
    },
    "linux": {
      "icon": "assets/icons/image.png",
      "target": "AppImage"
    }
  }
}
